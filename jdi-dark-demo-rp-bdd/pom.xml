<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.epam.jdi.dark</groupId>
    <artifactId>jdi-dark-demo-rp-bdd</artifactId>
    <name>JDI Dark Demo BDD Testing Report Portal</name>
    <version>1.0.0</version>
    <url>https://github.com/jdi-examples/jdi-dark-report-portal-demo</url>
    <description>JDI Dark Demo BDD Testing Report Portal</description>

    <properties>
        <suiteXML.file>general.xml</suiteXML.file>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <surefire.version>2.22.1</surefire.version>
        <jdi.dark.version>1.1.3</jdi.dark.version>
        <jdi.dark.bdd.version>1.1.1</jdi.dark.bdd.version>
        <rp.endpoint>https://rp.epam.com</rp.endpoint>
        <rp.project>epm-jdi</rp.project>
        <rp.launch>JDI Dark Demo BDD</rp.launch>
        <rp.enable>false</rp.enable>
        <log.level>INFO</log.level>
    </properties>

    <dependencies>
        <!--JDI-->
        <dependency>
            <groupId>com.epam.jdi</groupId>
            <artifactId>jdi-dark</artifactId>
            <version>${jdi.dark.version}</version>
        </dependency>
        <dependency>
            <groupId>com.epam.jdi</groupId>
            <artifactId>jdi-dark-bdd</artifactId>
            <version>${jdi.dark.bdd.version}</version>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.12</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.2</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.22.1</version>
                <configuration>
                    <suiteXmlFiles>
                        <suiteXmlFile>src/test/resources/${suiteXML.file}</suiteXmlFile>
                    </suiteXmlFiles>
                    <testFailureIgnore>true</testFailureIgnore>
                    <properties>
                        <property>
                            <name>listener</name>
                            <value>com.epam.reportportal.testng.ReportPortalTestNGListener</value>
                        </property>
                    </properties>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>${project.basedir}/src/main/resources</directory>
            </resource>
        </resources>

        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>
    </build>

    <repositories>
        <repository>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>bintray-epam-reportportal</id>
            <name>bintray</name>
            <url>http://dl.bintray.com/epam/reportportal</url>
        </repository>
    </repositories>

    <profiles>
        <profile>
            <id>dev_env</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <sut>api=https://dev.reportportal.io/api, uat=https://dev.reportportal.io/uat</sut>
                <project>jdi-tests</project>
            </properties>
        </profile>
        <profile>
            <id>report</id>
            <properties>
                <rp.description>Demo tests launch</rp.description>
                <rp.mode>DEFAULT</rp.mode>
                <rp.enable>true</rp.enable>
            </properties>
        </profile>
        <profile>
            <id>report_debug</id>
            <properties>
                <rp.description>Debug launch</rp.description>
                <rp.mode>DEBUG</rp.mode>
                <rp.enable>true</rp.enable>
            </properties>
        </profile>
    </profiles>

</project>